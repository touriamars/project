



{% extends 'base.html.twig' %}

 
  {% block content %}
                                            <li class="breadcrumb-item">
                                                <a href="http://localhost:8000/acceuil"> <i class="fa fa-home"></i> </a>
                                            </li>
                                            <li class="breadcrumb-item"><a href="http://localhost:8000/list_groupe"> Groupes</a>
                                            </li>
                                            <li class="breadcrumb-item"><a href="">Gestion Des Groupes</a>
                                            </li>

                                            {% endblock %}


{% block page_contents %}
                                        
                                        <div class="card">
                                            <div class="card-header">
                                               <a href="#addEmployeeModal"  onclick="myFunction('ajouter_groupe','')" class="btn btn-info" data-toggle="modal"><i class="material-icons">&#xE147;</i> <span>Ajouter un groupe</span></a>
                                               
                                                <div class="card-header-right">
                                                    <ul class="list-unstyled card-option">
                                                        <li><i class="fa fa fa-wrench open-card-option"></i></li>
                                                        <li><i class="fa fa-window-maximize full-card"></i></li>
                                                        <li><i class="fa fa-minus minimize-card"></i></li>
                                                        <li><i class="fa fa-refresh reload-card"></i></li>
                                                        <li><i class="fa fa-trash close-card"></i></li>
                                                    </ul>
                                                </div>
                                            </div>
                                            <div class="card-block table-border-style">
                                                <div class="table-responsive">
                                                    <table class="table table-striped table-hover">
                                                        <thead>
                                                            <tr>
                        <th>Id</th>
                        <th>Libelle</th>
                        
                        <th>Nombre d'Adhrent</th>
                       
                        <th>Nombre Max D'adherent</th>
                        <th>Tranche d'Age</th>
                        <th>Sexe</th>
                          <th>List des membres</th>
                            <th>List des Absence</th>
                        <th>Actions</th>
                    </tr>
                                                        </thead>
                                                        <tbody>
                        {% for groupe in groupes %}
                        <tr style="height:10px;" >
                       <td>{{ groupe.id}}</td>
                      <td>{{ groupe.lib}}</td>
                        <td>{{groupe.nbadherent}}</td>
                       
                        <td>{{groupe.nbmaxadherent}}</td>
                        <td>{{ groupe.trancheage}}</td>
                        <td>{{ groupe.sexe}}</td>
                        <td>{% if groupe.nbadherent >0 %}
                               <a href="" onclick="myFunction('list_adherent_groupe',{{groupe.id}})"  data-toggle="modal">
                                list des membres
                              {% endif %}</td>

                              <td>
                               <a href="" onclick="myFunction('list_absence',{{groupe.id}})"  data-toggle="modal">
                                 liste des Absence
                            </td>

                        <td>

                               {% if groupe.nbadherent < groupe.nbmaxadherent%}      
                               
                                  <a href="" onclick="myFunction('affectation',{{groupe.id}})" class="eye" data-toggle="modal">
                                <button class="btn btn-sm btn-primary badge" type="button" data-toggle="modal" data-target="#user-form-modal">Affecter</button>
 {% endif %}
                                       
                             </a>
                            <a href="{{path('update',{id : groupe.id}) }}" onclick="myFunction('update_groupe',{{groupe.id}})" class="edit" data-toggle="modal"><i class="material-icons" data-toggle="tooltip" title="Edit">&#xE254;</i></a>
                            <a href="{{path('delete_user',{id : groupe.id}) }}" onclick="myFunction('delete_groupe',{{groupe.id}})" class="delete" data-toggle="modal"><i class="material-icons" data-toggle="tooltip" title="Delete">&#xE872;</i></a>
                            
                        </td>

                                                            </tr>

                                                             {% endfor %}
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>



 



{% endblock  %}
  

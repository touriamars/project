    <body>
        
      
   
       
        <img src="{{absolute_url(asset('uploads/'~ image))}}" style="width: 100px;height: 100px" /> 

         <div class="form-group">  <label class=" col-sm-5">societe</label>
                                        <label class=" col-sm-5" style="margin-left: 40px ">{{nom}}</label>
                                        
                                    </div>
                                    <br>
   <table class="table">
